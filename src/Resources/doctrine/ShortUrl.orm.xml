<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
  http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

  <entity name="Horoshii\UrlShortenerBundle\Entity\ShortUrl" table="short_urls">

    <id name="id" type="bigint" column="id">
      <generator strategy="IDENTITY"/>
    </id>

    <field name="hash" type="string" nullable="true" unique="true" />
    <field name="url" length="2300" type="text" />
    <field name="redirectQuantity" type="integer"/>
    <field name="createdAt" type="datetime" />
    <field name="timeLifeEnd" type="datetime" />

  </entity>

</doctrine-mapping>
